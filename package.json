{
  "name": "rogemon",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:app": "vite",
    "dev:server": "run-p dev:server:build dev:server:alias dev:server:serve",
    "dev:server:build": "tsc --watch --preserveWatchOutput --project tsconfig.server.json",
    "dev:server:alias": "tsc-alias --watch --project tsconfig.server.json",
    "dev:server:serve": "NODE_ENV=development node --watch --watch-preserve-output dist/index.js",
    "build": "npm run build:server && npm run build:app",
    "build:app": "vite build",
    "build:server": "tsc --project tsconfig.server.json && tsc-alias --project tsconfig.server.json",
    "format": "prettier . --write",
    "lint": "eslint . --fix",
    "test": "run-p test:*",
    "test:type": "vue-tsc --watch --preserveWatchOutput",
    "test:unit": "vitest"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.11.0",
    "serverless-http": "^3.2.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@netlify/functions": "^3.0.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.8",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^3.0.7",
    "@vitest/eslint-plugin": "1.1.36",
    "@vitest/ui": "^3.0.7",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.21.0",
    "eslint-plugin-vue": "^9.32.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.11",
    "tsc-watch": "^6.2.1",
    "typescript": "<5.8.0",
    "vite": "^6.2.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^3.0.7",
    "vue-tsc": "^2.2.4"
  }
}
