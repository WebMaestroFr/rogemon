{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:api",
      "path": "api",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "dev:client",
      "path": "client",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": ["$vite"]
    },
    {
      "label": "dev",
      "dependsOn": ["dev:api", "dev:client"],
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "line": 1,
              "column": 1,
              "message": 1
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "."
            },
            "endsPattern": {
              "regexp": "."
            }
          }
        }
      ]
    }
  ]
}
